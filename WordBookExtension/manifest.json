{
  "manifest_version": 3,
  "name": "Word Book Extension",
  "version": "1.0",
  "permissions": [ "activeTab", "storage" ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "dist/content.bundle.js" ],
      "css": [ "css/styles.css" ]
    }
  ],
  "action": {
    "default_popup": "html/popup.html"
  }
}
